@using SummerCamp.Models
@model CompetitionTeamViewModel
@{
    ViewData["Title"] = "Add competition team";
}

<form id="myForm" asp-action="Add" method="post" class="needs-validation" novalidate>
    <div class="form-group">
        <label asp-for="TeamId" class="control-label"></label>
        @Html.DropDownList("TeamId", (IEnumerable<SelectListItem>) ViewData["Teams"], "Select a team", new { @class = "form-control" })
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Competition"></label>
        <input asp-for="Competition" class="form-control" />
        <span asp-validation-for="Competition" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalPoints"></label>
        <input asp-for="TotalPoints" class="form-control" />
        <span asp-validation-for="TotalPoints" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
</form>
