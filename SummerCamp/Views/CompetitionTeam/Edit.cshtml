@using SummerCamp.Models
@model CompetitionTeamViewModel
@{
    ViewData["Title"] = "Edit competition team";
}

<form id="myForm" asp-action="Edit" method="post" class="needs-validation" novalidate>
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label asp-for="Team"></label>
        <input asp-for="Team" class="form-control" />
        <span asp-validation-for="Team" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Competition"></label>
        <input asp-for="Competition" class="form-control" />
        <span asp-validation-for="Competition" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalPoints"></label>
        <input asp-for="TotalPoints" class="form-control" />
        <span asp-validation-for="TotalPoints" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
</form>
