@using SummerCamp.Enums;
@using SummerCamp.Models

@model PlayerViewModel

<form id="myForm" asp-action="Edit" method="post" class="needs-validation" asp-controller="Player" novalidate>
    <input asp-for="Id" class="form-control" hidden />
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Position"></label>
@*        <input asp-for="Position" class="form-control" /> *@
        @Html.DropDownList("Position", Html.GetEnumSelectList<PositionEnum>(), "Select a position", new { @class = "form-control" })
    
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="ShirtNumber"></label>
        <input asp-for="ShirtNumber" class="form-control" />
        <span asp-validation-for="ShirtNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeamId"></label>
        <input asp-for="TeamId" class="form-control" />
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeamId" class="control-label"></label>
        @Html.DropDownList("TeamId", (IEnumerable<SelectListItem>) ViewData["Teams"], "Select a team", new { @class = "form-control" })
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Create</button>
</form>