@using SummerCamp.Models
@model IEnumerable<PlayerViewModel>
@{
    ViewData["Title"] = "Players";
}
<h1 class="centered-title">Players</h1>
<a asp-controller="Player" asp-action="Add" class="btn btn-primary">Add player</a>
<div class="text-center">
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-striped table-hover sortable">
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="6">No Records found.</td>
                </tr>
            }
            else
            {
                <thead class="thead-dark">
                    <tr>
                        <th>Full Name</th>
                        <th>Birthdate</th>
                        <th>Address</th>
                        <th>Position</th>
                        <th>ShirtNumber</th>
                        <th>TeamId</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FullName</td>
                            <td>@item.BirthDate.Date.ToShortDateString()</td>
                            <td>@item.Address</td>
                            <td>@item.Position</td>
                            <td>@item.ShirtNumber</td>
                            @if (@item.TeamId != null)
                            {
                                <td>@item.TeamId</td>
                            }
                            else
                               { <td>No team</td>}
                                <td>
                                <a asp-action="Edit" asp-controller="Player" asp-route-playerId="@item.Id" class="btn btn-primary">
                                    Edit
                                </a>
                                <a asp-action="Delete" asp-controller="Player" asp-route-playerId="@item.Id" class="btn btn-primary">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>
</div>

