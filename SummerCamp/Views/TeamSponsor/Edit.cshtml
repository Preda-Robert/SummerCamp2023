@using SummerCamp.Models

@model TeamSponsorViewModel

<form id="myForm" asp-action="Add" method="post" class="needs-validation" asp-controller="TeamSponsor" novalidate>
    <input asp-for="Id" class="form-control" hidden />
    <div class="form-group">
        <label asp-for="TeamId" class="control-label"></label>
        @Html.DropDownList("TeamId", (IEnumerable<SelectListItem>) ViewData["Teams"], "Select a team", new { @class = "form-control" })
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SponsorId" class="control-label"></label>
        @Html.DropDownList("SponsorId", (IEnumerable<SelectListItem>) ViewData["Sponsors"], "Select a sponsor", new { @class = "form-control" })
        <span asp-validation-for="SponsorId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Create</button>
</form>