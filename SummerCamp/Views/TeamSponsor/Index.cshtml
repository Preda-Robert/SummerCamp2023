@using SummerCamp.Models
@model IEnumerable<TeamSponsorViewModel>
@{
    ViewData["Title"] = "Team Sponsors";
}
<h1 class="centered-title">Team Sponsors</h1>
<a asp-controller="TeamSponsor" asp-action="Add" class="btn btn-primary">Add sponsor to team</a>
<div class="text-center">
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-striped table-hover sortable">
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="6">No Records found.</td>
                </tr>
            }
            else
            {
                <thead class="thead-dark">
                    <tr>
                        <th>Team</th>
                        <th>Sponsor</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Team</td>
                            <td>@item.Sponsor</td>
                            <td>
                                <a asp-action="Edit" asp-controller="TeamSponsor" asp-route-teamsponsorId="@item.Id" class="btn btn-primary">
                                    Edit
                                </a>
                                <a asp-action="Delete" asp-controller="TeamSponsor" asp-route-teamsponsorId="@item.Id" class="btn btn-primary">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>
</div>

